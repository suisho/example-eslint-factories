
body
  background: #333;
  box-sizing: border-box;
  color: #ccc;

a
  color: #ccc;
  -webkit-tap-highlight-color:rgba(0,0,0,0);
.page
  padding: 1em;
.page-start
  .logo
    font-size: 48px;
    color: #ccc;
    text-align: center;

  .start-button-container
    width: 100%;
    a
      text-decoration: none;

  .start-button
    $item = 96px;
    vertical-align: middle
    text-align: center;
    line-height: 1.8em;
    font-size: $item ;
    font-weight: bold;
    width: $item * 2;
    height: $item * 2;
    border-radius: $item;
    background: #e1d16a;
    margin: 0 auto;
    margin-top: 100px;
    a
      color: #333;

  .skip
    display: block;
    position: fixed;
    bottom: 1em;
    margin: 0 auto;
    text-align: center;
    padding-top: 300px;
    width: 100%;
    height: 20px;
    z-index: -1;

.page-question
  .osumes
    font-size: 96px - 20px;
    text-align: center;
    .osu, .mesu
      margin: 10px;
      padding: 10px;
      border-radius: 96px;
    .osu
      background: #6e60d8;
    .mesu
      background: #d88ccf;